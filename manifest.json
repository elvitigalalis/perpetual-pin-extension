{
    "manifest_version": 3,
    "name": "Perpetually Pin Tabs",
    "version": "1.0",
    "description": "Automatically and perpetually pin certain tabs.",
    "background": {
        "service_worker": "scripts/background.js"
    },
    "permissions": [ 
        "tabs",
        "storage"
    ],
    "action": {
        "default_popup": "html/popup.html",
        "default_icon": {
            "16": "images/icon-16.png",
            "32": "images/icon-32.png",
            "48": "images/icon-48.png",
            "128": "images/icon-128.png"
        }
    },
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    }
  }